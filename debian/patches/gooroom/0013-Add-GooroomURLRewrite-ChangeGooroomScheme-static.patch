+GURL GooroomURLRewrite::ChangeGooroomScheme(GURL url){
+  // Change "chrome://" to "gooroom://"
+  if(url.scheme() == "chrome"){
+    std::string new_url = "gooroom://" + url.GetContent();
+    GURL changed_url = GURL(new_url);
+    return changed_url;
+  }
+  return url;
+}
