Subject: [PATCH 45/84] BugTrackingSystem

507 : Disable 'Open as window' on making shortcut app popup
---
 .../ui/views/web_apps/web_app_confirmation_view.cc     | 10 ++++++++--
 1 file changed, 8 insertions(+), 2 deletions(-)

diff --git a/chrome/browser/ui/views/web_apps/web_app_confirmation_view.cc b/chrome/browser/ui/views/web_apps/web_app_confirmation_view.cc
index 46d52ac59..cd28d8450 100644
--- a/chrome/browser/ui/views/web_apps/web_app_confirmation_view.cc
+++ b/chrome/browser/ui/views/web_apps/web_app_confirmation_view.cc
@@ -131,7 +131,9 @@ WebAppConfirmationView::WebAppConfirmationView(
       open_as_window_radio_->SetChecked(true);
     else
       open_as_tabbed_window_radio_->SetChecked(true);
-  } else {
+  }
+#if !defined(GOOROOM_BUILD)
+  else {
     auto open_as_window_checkbox = std::make_unique<views::Checkbox>(
         l10n_util::GetStringUTF16(IDS_BOOKMARK_APP_BUBBLE_OPEN_AS_WINDOW));
     open_as_window_checkbox->SetChecked(web_app_info_->open_as_window);
@@ -147,6 +149,7 @@ WebAppConfirmationView::WebAppConfirmationView(
     else
       open_as_window_checkbox_->SetChecked(true);
   }
+#endif
 
   title_tf_->SelectAll(true);
   chrome::RecordDialogCreation(chrome::DialogIdentifier::WEB_APP_CONFIRMATION);
@@ -178,9 +181,12 @@ bool WebAppConfirmationView::Accept() {
       web_app_info_->open_as_window = open_as_window_radio_->GetChecked();
       web_app_info_->enable_experimental_tabbed_window = false;
     }
-  } else {
+  }
+#if !defined(GOOROOM_BUILD)
+  else {
     web_app_info_->open_as_window = open_as_window_checkbox_->GetChecked();
   }
+#endif
   std::move(callback_).Run(true, std::move(web_app_info_));
   return true;
 }
